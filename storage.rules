rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Avatar của user
    match /avatars/{userId} {
      // Cho phép đọc avatar (công khai)
      allow read: if true;

      // Chỉ chủ nhân userId mới được phép ghi/ghi đè avatar
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
